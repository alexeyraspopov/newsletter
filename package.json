{
  "name": "newsletter",
  "version": "2.1.0",
  "description": "Simple pub/sub implementation",
  "license": "MIT",
  "main": "newsletter.js",
  "module": "newsletter.module.js",
  "types": "typings/newsletter.d.ts",
  "files": [
    "newsletter.js.flow",
    "newsletter.module.js",
    "typings"
  ],
  "repository": "alexeyraspopov/newsletter",
  "author": "Alexey Raspopov (https://github.com/alexeyraspopov)",
  "keywords": [
    "pubsub",
    "observer",
    "events"
  ],
  "devDependencies": {
    "babel-core": "~6.25.0",
    "babel-jest": "~20.0.3",
    "babel-preset-es2015": "~6.24.1",
    "jest": "~20.0.4",
    "rollup": "~0.43.0",
    "rollup-plugin-babel": "~2.7.1"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "scripts": {
    "test": "jest",
    "buildmodulecjs": "rollup --format cjs --config rollup.config.js modules/Newsletter.js > newsletter.js",
    "buildmodulees": "rollup --format es --config rollup.config.js modules/Newsletter.js > newsletter.module.js",
    "buildtypes": "cp typings/newsletter.js.flow newsletter.js.flow",
    "prepublish": "npm run buildmodulecjs && npm run buildmodulees && npm run buildtypes"
  }
}
